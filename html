  <script>
    const phrases = [
      "Embrace the void.",
      "Pain is the only constant.",
      "Silence screams louder than words.",
      "Lost in thought, found in darkness.",
      "There is beauty in despair.",
      "Alone. Again. Always."
    ];

    let i = 0;
    setInterval(() => {
      document.getElementById("phrase").textContent = phrases[i];
      i = (i + 1) % phrases.length;
    }, 4000);
  </script>
